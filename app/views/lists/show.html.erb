<h1>SHOW PAGE FOR LIST <%= @list.id %> WOO</h1>
<%= link_to "Add movies bro!", new_list_bookmark_path(@list), class: "btn btn-primary"%>
<% @list.bookmarks.each do |bookmark| %>
  <div class="card-trip">
  <img src=<%= bookmark.movie.poster_url %> />
  <div class="card-trip-infos">
    <div>
      <h2><%= bookmark.comment  %></h2>
      <p><%= bookmark.movie.title  %></p>
      <%= link_to 'Delete', list_path(@bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
    </div>
  </div>
</div>
<% end %>
